<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <server>
            <id>amk-releases</id>
            <username></username>
            <password></password>
        </server>
        <server>
            <id>amk-snapshots</id>
            <username></username>
            <password></password>
        </server>
    </servers>
    <mirrors>
        <mirror>
            <id>amk.maven.mirror</id>
            <name>AMK Maven Mirror</name>
            <url>http://ic.amick.mx/nexus/repository/maven-public/</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
        <mirror>
            <id>amk.hortonworks.mirror</id>
            <name>AMK Hortonworks Mirror</name>
            <url>http://ic.amick.mx/nexus/repository/hortonworks/</url>
            <mirrorOf>hortonworks</mirrorOf>
        </mirror>
    </mirrors>
    <profiles>
        <profile>
            <id>nexus</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>nexus</activeProfile>
    </activeProfiles>
</settings>
